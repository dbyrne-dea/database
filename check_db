# script checksums the database to confirm it is accurate and not damaged

DATABASE=${1:-database}
TEMPSUM=`mktemp`

find $DATABASE -type f -printf "%P \n" -print | paste -d " "  - - | sed "s/\///" > $TEMPSUM
shasum -c $TEMPSUM
rm $TEMPSUM

